<android.support.v7.widget.CardView android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="20dp"
    android:layout_margin="10dp"

    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/posterView"
            android:layout_width="120dp"
            android:layout_height="178dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/gog" />

        <TextView
            android:id="@+id/mainTitleView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="5dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/posterView"
            android:text="Harry Potter and the deathly Hallows( Part 2)"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toEndOf="@+id/posterView"
            card_view:layout_constraintTop_toTopOf="@+id/posterView" />

        <TextView
            android:id="@+id/plotSummaryView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/mainTitleView"
            android:layout_below="@+id/mainTitleView"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:padding="3dp"
            android:text="Plot : A young boy named Kubo must locate a magical suit of armour worn by his late father in order to defeat a vengeful spirit from the past."
            android:textSize="12sp"
            android:textStyle="italic"
            android:visibility="visible"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.555"
            card_view:layout_constraintStart_toStartOf="@+id/mainTitleView"
            card_view:layout_constraintTop_toBottomOf="@+id/mainTitleView" />

        <TextView
            android:id="@+id/genreView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/plotSummaryView"
            android:layout_below="@+id/plotSummaryView"
            android:layout_marginEnd="8dp"
            android:paddingStart="5dp"
            android:text="Genre : Animation, Adventure, Comedy, Crime, Family, Mystery"
            android:textSize="12sp"
            android:visibility="visible"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="@+id/plotSummaryView"
            card_view:layout_constraintTop_toBottomOf="@+id/plotSummaryView" />

        <TextView
            android:id="@+id/ratingView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/genreView"
            android:layout_below="@+id/genreView"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="8dp"
            android:text="IMDB :4.5/10"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="visible"
            card_view:layout_constraintBottom_toBottomOf="@+id/posterView"
            card_view:layout_constraintEnd_toEndOf="parent" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
